<header>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Erb to Phlex Converter</h2>
    </div>
  </div>
</header>

<main data-controller="converter">
  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <form data-converter-target="form" action="<%= converters_path %>" data-turbo-stream method="post" data-action="submit->converter#convert change->converter#convert">
      <div class="mt-6">
        <div class="flex items-center">
          <div class="text-gray-900 bg-gray-100 rounded-md px-3 py-1.5 text-sm font-medium" aria-controls="tabs-1-panel-1">ERB</div>
        </div>
        <div class="mt-2">
          <div id="tabs-1-panel-1" class="-m-0.5 rounded-lg p-0.5" aria-labelledby="tabs-1-tab-1" role="tabpanel" tabindex="0">
            <div>
              <textarea data-converter-target="input" data-action="change->converter#convert keyup->converter#convert" rows="10" name="input" id="input" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" placeholder="Paste ERB here"></textarea>
            </div>
          </div>
        </div>
      </div>
    </form>


    <div class="mt-6" data-converter-target="output">
      <div class="flex items-center">
        <div class="text-gray-900 bg-gray-100 rounded-md px-3 py-1.5 text-sm font-medium" aria-controls="tabs-1-panel-1">Phlex</div>
      </div>
      <div class="mt-2">
        <div id="tabs-1-panel-1" class="-m-0.5 rounded-lg p-0.5" aria-labelledby="tabs-1-tab-1" role="tabpanel" tabindex="0">
          <div>
            <textarea id="output" rows="40" cols="120" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
